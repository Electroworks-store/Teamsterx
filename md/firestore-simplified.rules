rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - each user can only access their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Teams collection
    match /teams/{teamId} {
      // Members can read their team (members is an object with userId as keys)
      allow read: if request.auth != null && request.auth.uid in resource.data.members.keys();
      
      // Allow all authenticated users to update teams (TEMPORARY - FOR TESTING)
      allow update: if request.auth != null;
      
      // Anyone authenticated can create a team (they become owner)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      
      // Team subcollections - tasks, messages, events
      match /tasks/{taskId} {
        allow read, create, update, delete: if request.auth != null;
      }
      
      match /messages/{messageId} {
        allow read, create, update, delete: if request.auth != null;
      }
      
      match /events/{eventId} {
        allow read, create, update, delete: if request.auth != null;
      }
      
      match /activities/{activityId} {
        allow read, create: if request.auth != null;
      }
    }
    
    // Join requests collection
    match /joinRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}
