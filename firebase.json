{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/app",
        "destination": "/index.html"
      },
      {
        "source": "/app/**",
        "destination": "/index.html"
      },
      {
        "source": "/home",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/home/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ]
  }
}
